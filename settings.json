{
    "workbench.colorTheme": "One Dark Pro Darker", //Operator Mono Dark Theme    One Dark Pro Monokai Darker
    "latex-workshop.view.pdf.viewer": "tab",
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.saturation": 0.8,
    "material-icon-theme.activeIconPack": "react_redux",
    "editor.fontFamily": "Operator Mono Lig Light", //Fira Code, Operator Mono Light
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {
        "[One Dark Pro Monokai Darker]": {
            "textMateRules": [
                {
                    "scope": "entity.other.attribute-name",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "support.type, support.class",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "emphasis",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "strong",
                    "settings": {
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": "comment",
